<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   app:cardCornerRadius="5dp"
                                   android:layout_margin="5dp"
                                   app:cardElevation="8dp"
                                   android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/restaurants_list_img"
                android:layout_width="@dimen/thumb_width"
                android:layout_height="@dimen/thumb_height"
                android:src="@color/colorPrimaryDark"
                android:padding="10dp"
                android:background="@drawable/round_outline"
                android:layout_weight="1"
                android:contentDescription="@string/thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:padding="10dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/restaurants_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/restaurants_list_img"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restaurants_list_start"
                    app:layout_constraintStart_toEndOf="@+id/restaurants_list_img"
                    app:layout_constraintTop_toBottomOf="@+id/restaurants_list_title"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>